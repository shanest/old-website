/* for bootstrap scrollspy */
html {
	height: 100%;
}

body {
	padding-top: 70px;
	position: relative;
}

a { 
	text-decoration: none; 
	color: #d14c00;
}

a:hover {
	color: #4b2e83;
}

a.black {
	color: #000000;
}

h1, h2 {
	color: #d14c00; 
	font-variant: small-caps;
}

h3 {
	font-variant: small-caps;
}

img.full-width {
	width: 100%;
}

.navbar-name {
	float: left;
	font-size: 30pt;
	padding: 15px 15px;
}

.topnav {
	border-bottom: 3px solid #d14c00;
	background-color: #b7a57a;
}

li.active, .nav li a:hover {
	background-color: #d8d8d8;
}

p.citation {
	margin-left: 20px;
	text-indent: -20px;
}

.journaltitle {
  /* color: #2a6496; */
	color: #4b2e83;
}

h3.subsection {
	border-bottom: 2px solid #b7a57a;
}
